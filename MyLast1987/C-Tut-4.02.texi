#define TRUE  1
#define FALSE 0

enum treasures                  /* Adventure Treasures */
   @{
   rubies,
   sapphires,
   gold,
   silver,
   mask,
   scroll,
   lamp
   @};

/***********************************************************/
/* Level 0                                                 */
/***********************************************************/

